rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper para verificar login
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- 1. USUARIOS Y ROLES (NUEVO & CRÍTICO) ---
    // Esto permite que el AdminAuthContext lea el rol del usuario
    match /users/{email} {
      allow read: if isAuthenticated() && request.auth.token.email == email;
      allow write: if isAuthenticated(); // Solo admin debería, pero simplificamos por ahora
    }

    // --- 2. PRODUCTOS ---
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // --- 3. PEDIDOS ---
    match /orders/{orderId} {
      allow create: if true; 
      allow read, update, delete: if isAuthenticated();
    }

    // --- 4. CONFIGURACIÓN ---
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // --- 5. SOLICITUDES MAYORISTAS ---
    match /wholesale_requests/{requestId} {
      allow create: if true;
      allow read, write: if isAuthenticated();
    }
    
    // --- 6. DEFAULT ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}