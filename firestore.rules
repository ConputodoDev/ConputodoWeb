rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Función auxiliar: Verifica si es el Admin (autenticado)
    function isAdmin() {
      return request.auth != null;
    }

    // 1. PRODUCTOS: Todos ven, solo Admin edita
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 2. CONFIGURACIÓN: Todos leen tasa, solo Admin edita
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 3. PEDIDOS: Clientes crean, solo Admin lee/edita todo
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // 4. MAYORISTAS: Clientes crean, solo Admin lee
    match /wholesale_requests/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}